<div class="page-head">
    <h2><?php echo $this->__('Localization') ?></h2>
</div>

<form method="post" id="form-validate">
<fieldset class="callout blue rounded">
    <h3><?php echo $this->__('Locale settings') ?></h3>
    <ul>
        <li>
            <div class="input-box">
                <label for="locale"><?php echo $this->__('Locale') ?> <span class="required">*</span></label><br/>
