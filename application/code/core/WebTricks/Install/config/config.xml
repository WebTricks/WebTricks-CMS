<config>
    <modules>
        <WebTricks_Install>
            <version>1.0.0</version>
        </WebTricks_Install>
    </modules>
    
    <global>
    	<webcontrols>
    		<install>
    			<class>WebTricks_Install_WebControls</class>
    		</install>
    	</webcontrols>
    </global>

    <webtricks>
        <routers>
            <install>
                <use>webtricks</use>
                <args>
                    <module>WebTricks_Install</module>
                    <frontName>install</frontName>
                </args>
            </install>
        </routers>
    </webtricks>
    
    <install>
        <layout>
            <updates>
                <main>
                	<file>main.xml</file>
                </main>
            </updates>
        </layout>
        <eula_file>LICENSE.html</eula_file>            
    </install>
</config>